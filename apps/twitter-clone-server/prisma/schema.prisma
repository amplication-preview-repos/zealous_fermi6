datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  comments      Comment[]
  commentsCount Int?
  content       String?
  createdAt     DateTime  @default(now())
  id            String    @id @default(cuid())
  image         Json?
  likes         Like[]
  likesCount    Int?
  updatedAt     DateTime  @updatedAt
  user          User?     @relation(fields: [userId], references: [id])
  userId        String?
}

model Follower {
  createdAt     DateTime @default(now())
  followedUser  String?
  followingUser String?
  id            String   @id @default(cuid())
  updatedAt     DateTime @updatedAt
}

model Like {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Comment {
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  bio          String?
  comments     Comment[]
  coverPhoto   Json?
  createdAt    DateTime  @default(now())
  email        String?   @unique
  firstName    String?
  id           String    @id @default(cuid())
  lastName     String?
  likes        Like[]
  password     String
  profileImage Json?
  roles        Json
  tweets       Tweet[]
  updatedAt    DateTime  @updatedAt
  username     String    @unique
}
